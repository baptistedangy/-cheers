
  <%= form_tag wines_path, method: :get do %>
    <div class="d-flex justify-content-center search-form-control form-group">
      <label for="id_label_single" class="search-form-control-text">
        <%= select_tag "query", options_for_select(@meals.map{|meal| [meal.name, meal.name, { "data-photo" => meal.photo }] }), include_blank: true,
          class: "form-control select2 meal-templating"%>
          <button name="button" type="submit" style= "background-color: transparent; border: transparent;">
            <i class="fas fa-search"></i>
          </button>
      </label>
    </div>
  <% end %>
