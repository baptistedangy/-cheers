<div class="show-banner">
    <div id="map"
     style="width: 100%; height: 300px; background-image: url(https://res.cloudinary.com/duf8mmjpl/image/upload/v1606310359/Capture_d_e%CC%81cran_2020-11-25_a%CC%80_14.17.39_qhexwj.png);">
      <div class= "wine-name">
        <%= link_to("#") do %>
          <i class="fas fa-heart"></i>
        <% end %>
        <h1><%= @wine.name %></h1>
        <p><%= image_tag("https://ruedesvignerons-548724.c.cdn77.org/images/front/svg-rounded-flags/fr.svg", size: "15x15", :alt => "rss feed") %> <%= @wine.wine_region.name %></p>
      </div>
    </div>
    <div class="info-vin">
      <table class="tableau my-2">
        <tr>
          <td><%= image_tag("https://i.pinimg.com/originals/af/33/7b/af337bcd43e393429fc7f00e36e5444d.png", size: "25x25") %><br> <%= @wine.millesime %></td>
          <td> <%= image_tag("https://res.cloudinary.com/duf8mmjpl/image/upload/v1606387170/color_rssrjo.png", size: "25x25") %><br><%= @wine.wine_type.name %></td>
        </tr>
        <tr>
          <td> <%= image_tag("https://img.icons8.com/ios/452/money-bag-euro.png", size: "25x25") %> <br><%= @wine.price %></td>
          <td> <%= image_tag("https://img.icons8.com/pastel-glyph/2x/grape--v2.png", size: "25x25") %> <br><%= @wine.cepage %></td>
        </br>
      </table>
    <%= cl_image_tag @wine.wine_region.photo.key, :class => "bouteille" %>
      </div>
      <div class="description">
        <h3>Aller plus loin...</h3>
        <p class="my-4"><%= @wine.description %></p>
    </div>
</div>
