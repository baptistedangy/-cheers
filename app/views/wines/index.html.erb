
<%= render 'shared/loading' %>

<div class="container">
  <div class="first">
    <div class="intro">
      <h2>Pour un(e) <strong> <%= @meal.name %></strong>, on vous recommande...</h2>
    </div>
    <div class="wine">
      <div class="box">
        <h2><%= @suggestion.wine_region.name.upcase %></h2>
        <h2><%= @suggestion.wine_type.name.upcase %> </h2>
      </div>
      <div class="btl">
        <%= cl_image_tag @suggestion.wine_region.photo.key%>
      </div>
    </div>
  </div>
</div>

<div class= "boite">
  <div class="results">
    <% @wine_selection.sample(3).each do |wine| %>
      <div class="wine-card">
        <div class="text">
          <h2><%=wine.name.upcase %></h2>
          <p><%= image_tag("https://img.icons8.com/ios/452/money-bag-euro.png", size: "30x30") %><%=wine.price%></p>
          <%= image_tag("https://ruedesvignerons-548724.c.cdn77.org/images/front/svg-rounded-flags/fr.svg", size: "40x40", :alt => "rss feed", class:"cards-flag") %>
        </div>
        <div class="link">
          <%=link_to wine_path(wine), class: "wine-card-link" do %>
             <i class="fas fa-eye"></i> <strong>VOIR </strong>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div id="wine-show-container"></div>
